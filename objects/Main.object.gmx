            <string>if (keyboard_check_pressed(ord("C")))
{
    ds_grid_clear(World, 0);
}

if (keyboard_check_pressed(ord("L")))
{
    var data = clipboard_get_text();
    var index = 0;
    
    for (var i = 0; i &lt; ds_grid_width(World); ++i)
    {
        for (var j = 0; j &lt; ds_grid_height(World); ++j)
        {
            ds_grid_set(World, i, j, real(string_char_at(data, ++index)));
        }
    }
}

if (keyboard_check_pressed(ord("O")))
{
    var data = "";
    
    for (var i = 0; i &lt; ds_grid_width(World); ++i)
    {
        for (var j = 0; j &lt; ds_grid_height(World); ++j)
        {
            data += string(ds_grid_get(World, i, j));
        }
    }
    
    clipboard_set_text(data);
}

if (keyboard_check_pressed(ord("Z")))
{
    STATE = (STATE+1) % 4;
}

if (keyboard_check(ord("1")))
{
    Viewport[0, 0] = clamp(mouse_x-Viewoffset[0], 0, Viewport[1, 0]);
    Viewport[0, 1] = clamp(mouse_y-Viewoffset[1], 0, Viewport[1, 1]);
}
//else
if (keyboard_check(ord("2")))
{
    Viewport[1, 0] = clamp(mouse_x-Viewoffset[0], Viewport[0, 0], ds_grid_width(World)*16);
    Viewport[1, 1] = clamp(mouse_y-Viewoffset[1], Viewport[0, 1], ds_grid_height(World)*16);
}
if (keyboard_check(ord("3")))
{
    if (!Viewportanchored)
    {
        Viewportanchor[0] = Viewoffset[0]-mouse_x;
        Viewportanchor[1] = Viewoffset[1]-mouse_y;
        Viewportanchored = true;
    }
    Viewoffset[0] = Viewportanchor[0]+mouse_x;
    Viewoffset[1] = Viewportanchor[1]+mouse_y;
}
else
{
    Viewportanchored = false;
}
if (keyboard_check(ord("4")))
{
    if (!Viewanchored)
    {
        Viewanchor[0] = Viewpoint[0]+mouse_x;
        Viewanchor[1] = Viewpoint[1]+mouse_y;
        Viewanchored = true;
    }
    Viewpoint[0] = Viewanchor[0]-mouse_x;
    Viewpoint[1] = Viewanchor[1]-mouse_y;
}
else
{
    Viewanchored = false;
}
if (keyboard_check_pressed(ord("5")))
{
    Viewport[0, 0] = 0;
